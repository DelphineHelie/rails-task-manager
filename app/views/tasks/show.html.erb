<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<% completed = @task.completed ? "fa-check-square" : "fa-square" %>
<% completed_msg = @task.completed ? "This task is completed" : "This task is not completed yet" %>
<p><i class="far <%= completed %>"> <%= completed_msg %></i></p>
<%= link_to "Back to list", tasks_path %>

